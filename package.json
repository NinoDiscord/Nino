{
  "name": "@august/nino",
  "description": "ðŸ”¨ Advanced and cute moderation discord bot as an entry of Discord's Hack Week",
  "version": "1.0.0",
  "private": true,
  "homepage": "https://nino.floofy.dev",
  "license": "MIT",
  "repository": "https://github.com/NinoDiscord/Nino",
  "main": "build/main.js",
  "author": "August <cutie@floofy.dev>",
  "maintainers": [
    {
      "email": "cutie@floofy.dev",
      "name": "August",
      "url": "https://floofy.dev"
    }
  ],
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "clean:node_modules": "rm -rf node_modules/**/node_modules && rm -rf node_modules/@types/**/node_modules && rm -rf node_modules/@augu/**/node_modules",
    "clean:win:tar": "cp node_modules/@augu/collections/build/index.js.* node_modules/@augu/collections/build/index.js && rm node_modules/@augu/collections/build/index.js.*",
    "husky:install": "husky install && rm .husky/.gitignore",
    "migrations": "npm run build && typeorm migration:run && typeorm schema:sync",
    "shortlinks": "node scripts/shortlinks.js",
    "migrate": "node scripts/v0-to-v1.js",
    "prepare": "npm run clean:node_modules",
    "build": "npm run lint && rm -rf build && tsc",
    "start": "cd build && node main.js",
    "lint": "eslint src --ext .ts --fix",
    "dev": "cd src && ts-node --files --project ../tsconfig.json main.ts"
  },
  "dependencies": {
    "@augu/collections": "1.0.8",
    "@augu/dotenv": "1.3.0",
    "@augu/http": "1.2.1",
    "@augu/lilith": "3.0.1",
    "@augu/orchid": "3.0.3",
    "@augu/utils": "1.5.1",
    "@kubernetes/client-node": "0.14.3",
    "@sentry/node": "6.3.5",
    "eris": "github:abalabahaha/eris#dev",
    "express": "4.17.1",
    "ioredis": "4.27.2",
    "js-yaml": "4.1.0",
    "ms": "2.1.3",
    "pg": "8.6.0",
    "prom-client": "13.1.0",
    "reflect-metadata": "0.1.13",
    "source-map-support": "0.5.19",
    "tslog": "3.2.0",
    "typeorm": "0.2.31",
    "ws": "7.4.5"
  },
  "devDependencies": {
    "@augu/eslint-config": "2.0.3",
    "@augu/tsconfig": "1.1.0",
    "@types/express": "4.17.11",
    "@types/ioredis": "4.26.3",
    "@types/js-yaml": "4.0.1",
    "@types/ms": "0.7.31",
    "@types/node": "15.0.2",
    "@types/ws": "7.4.4",
    "@typescript-eslint/eslint-plugin": "4.22.1",
    "@typescript-eslint/parser": "4.22.1",
    "discord-api-types": "0.18.1",
    "eslint": "7.26.0",
    "husky": "6.0.0",
    "ts-node": "9.1.1",
    "typescript": "4.2.4"
  }
}
