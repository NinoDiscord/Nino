{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "lib": [ "es2015", "es2016", "esnext" ],
        "declaration": false,
        "outDir": "./dist",
        "rootDir": "./src",
        "strict": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "types": [ "node", "jest" ],
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [ "src/**/*" ],
    "exclude": [ 
        "node_modules",
        "src/**/*.test.ts"
     ]
}