datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum LogEvent {
  VOICE_MEMBER_DEAFENED
  VOICE_CHANNEL_LEAVE
  VOICE_CHANNEL_SWITCH
  VOICE_CHANNEL_JOIN
  VOICE_MEMBER_MUTED
  MESSAGE_UPDATED
  MESSAGE_DELETED
  MEMBER_BOOSTED
  THREAD_CREATED
  THREAD_DELETED
}

enum GlobalBanType {
  GUILD
  USER
}

enum PunishmentType {
  ALLOW_THREADS_AGAIN
  WARNING_REMOVED
  VOICE_UNDEAFEN
  WARNING_ADDED
  VOICE_UNMUTE
  VOICE_DEAFEN
  VOICE_MUTE
  NO_THREADS
  UNMUTE
  UNBAN
  KICK
  MUTE
  BAN
}

model Automod {
  blacklistedWords  String[] @map("blacklisted_words")
  dehoisting        Boolean @default(false)
  shortlinks        Boolean @default(false)
  blacklist         Boolean @default(false)
  mentions          Boolean @default(false)
  guildId           String  @unique @map("guild_id")
  invites           Boolean @default(false)
  spam              Boolean @default(false)
  raid              Boolean @default(false)

  @@map("automod")
}

model GlobalBans {
  reason String?
  issuer String
  type   GlobalBanType
  id     String @unique

  @@map("global_bans")
}

model Cases {
  attachments String[]
  moderatorId String  @map("moderator_id")
  message_id  String? @map("message_id")
  victimId    String  @map("victim_id")
  guildId     String  @unique
  reason      String?
  index       Int
  type        PunishmentType
  soft        Boolean
  time        Int?

  @@map("cases")
}

model Guild {
  modlogChannelId String? @map("modlog_channel_id")
  mutedRoleId     String? @map("muted_role_id")
  prefixes        String[]
  language        String
  guildId         String @unique @map("guild_id")

  @@map("guilds")
}

model Logging {
  ignoreChannels String[] @map("ignored_channels")
  ignoredUsers   String[] @map("ignored_users")
  channelId      String?  @map("channel_id")
  enabled        Boolean
  events         LogEvent[]
  guildId        String   @unique @map("guild_id")

  @@map("logging")
}

model Punishments {
  warnings Int
  guildId  String @unique @map("guild_id")
  index    Int    @unique
  extra    Json?
  soft     Boolean
  time     String?
  type     PunishmentType

  @@map("punishments")
}

model User {
  prefixes        String[]
  language        String
  userId          String @unique @map("user_id")

  @@map("users")
}

model Warning {
  guildId String  @unique @map("guild_id")
  reason  String?
  amount  Int
  userId  String  @map("user_id")
}
